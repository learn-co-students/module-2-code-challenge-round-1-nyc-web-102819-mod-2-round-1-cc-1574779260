<h1>Make a new heroine!!</h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>
<%= form_for @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %><br>
    <%= f.label :power_id, "Super Power: " %>
    <%= f.collection_select :power_id, @powers, :id, :name%><br>
    <%= f.submit %>
<% end %>
<%= button_to "Back to all Heroines", heroines_path, method: :get%>