<h1>Create a new Heroine</h1>

<% if flash[:error] %>
    <% flash[:error].each do |error| %>
    <br>
    <%= error %>
    <% end %>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :super_name %>:
  <%= f.text_field :super_name %><br />

  <%= f.collection_select :power_id, @powers, :id, :name, prompt: true %>
  <br>
  <%= f.submit %>
<% end %>