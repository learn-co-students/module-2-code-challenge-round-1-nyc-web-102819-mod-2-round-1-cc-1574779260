<h1>Create Heroine</h1>

<% flash.each do |type, message| %>
    <div style="background-color:Tomato;"> <%= message %> </div> <br>
<% end %>

<%= form_for @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %> <br>
    <%= f.label :power %>
    <%= f.collection_select :power_id, @powers, :id, :name, prompt: true %> <br>
    <%= f.submit %>
  <% end %>
