<h1>This is the form for creating a new Heroine</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |message| %>
    <%= message %>
    <% end %> 
<% end %> 

<%= form_for @heroine do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :super_name %>:
  <%= f.text_field :super_name %><br />

  <p>Power: <%= collection_select(:heroine, :power_id, Power.all, :id, :name, prompt: true) %></p>

  <%= f.submit %>
<% end %>